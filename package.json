{
  "name": "s2j-alliance-manager",
  "version": "1.0.0",
  "description": "Manage linked banners (including logos and videos) for partner companies in alliance relationships and display them in blocks on the front page and other locations.",
  "type": "module",
  "author": "Koutarou ISHIKAWA",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "plugin",
    "gutenberg",
    "blocks",
    "alliance",
    "partners",
    "management",
    "banners",
    "logos",
    "videos"
  ],
  "main": "s2j-alliance-manager.php",
  "scripts": {
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:fix": "npm run lint:ts:fix && npm run lint:scss:fix",
    "lint:ts": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx",
    "lint:ts:fix": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "lint:scss": "stylelint src/**/*.scss",
    "lint:scss:fix": "stylelint src/**/*.scss --fix",
    "lint:docs": "textlint --config ./tools/docs-linter/wordpress/.textlintrc.wp.json ./README.md ./docs/**/*.md",
    "build:dev": "FLUSH_DIST=true npm run build:dev:admin && npm run build:dev:gutenberg && npm run build:dev:classic && npm run build:dev:frontend",
    "build:dev:admin": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:dev:gutenberg": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:dev:classic": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:dev:frontend": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:production": "FLUSH_DIST=true npm run build:production:admin && npm run build:production:gutenberg && npm run build:production:classic && npm run build:production:frontend",
    "build:production:admin": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "build:production:gutenberg": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "build:production:classic": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "build:production:frontend": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "dev": "vite build --mode development --watch",
    "makepot": "wp i18n make-pot . languages/s2j-alliance-manager.pot --domain=s2j-alliance-manager"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "overrides": {
    "rollup": "^4.52.4"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.8.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@wordpress/api-fetch": "^7.29.0",
    "@wordpress/block-editor": "^15.2.0",
    "@wordpress/blocks": "^15.2.0",
    "@wordpress/components": "^30.2.0",
    "@wordpress/data": "^10.29.0",
    "@wordpress/element": "^6.29.0",
    "@wordpress/i18n": "^6.2.0",
    "@wordpress/scripts": "^30.22.0",
    "@wordpress/url": "^4.29.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "rollup": "^4.52.4",
    "sass": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "textlint": "^15.2.3",
    "textlint-rule-no-dead-link": "^6.0.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-jtf-style": "^3.0.3",
    "textlint-rule-preset-wp-docs-ja": "github:jawordpressorg/textlint-rule-preset-wp-docs-ja",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-static-copy": "^3.1.4"
  }
}

{
  "name": "s2j-alliance-manager",
  "version": "1.0.0",
  "description": "Manage linked banners (including logos and videos) for partner companies in alliance relationships and display them in blocks on the front page and other locations.",
  "type": "module",
  "author": "stein2nd",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "plugin",
    "alliance",
    "banner",
    "gutenberg"
  ],
  "main": "s2j-alliance-manager.php",
  "scripts": {
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:fix": "npm run lint:ts:fix && npm run lint:scss:fix",
    "lint:ts": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx",
    "lint:ts:fix": "eslint src/**/*.{ts,tsx} --ext .ts,.tsx --fix",
    "lint:scss": "stylelint src/**/*.scss",
    "lint:scss:fix": "stylelint src/**/*.scss --fix",
    "build:dev": "FLUSH_DIST=true npm run build:dev:admin && npm run build:dev:gutenberg && npm run build:dev:classic",
    "build:dev:admin": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:dev:gutenberg": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:dev:classic": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode development",
    "build:production": "FLUSH_DIST=true npm run build:production:admin && npm run build:production:gutenberg && npm run build:production:classic",
    "build:production:admin": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "build:production:gutenberg": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "build:production:classic": "FLUSH_DIST=false VITE_LOG_LEVEL=error vite build --mode production",
    "dev": "vite build --mode development --watch",
    "makepot": "wp i18n make-pot . languages/s2j-alliance-manager.pot --domain=s2j-alliance-manager"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "overrides": {
    "rollup": "^4.50.2"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.3.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@wordpress/api-fetch": "^7.29.0",
    "@wordpress/block-editor": "^15.2.0",
    "@wordpress/blocks": "^15.2.0",
    "@wordpress/components": "^30.2.0",
    "@wordpress/data": "^10.29.0",
    "@wordpress/element": "^6.29.0",
    "@wordpress/i18n": "^6.2.0",
    "@wordpress/scripts": "^30.22.0",
    "@wordpress/url": "^4.29.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "rollup": "^4.50.2",
    "sass": "^1.92.1",
    "stylelint": "^16.23.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vite-plugin-static-copy": "^3.1.2"
  }
}
